<%- include('../partials/header') %>

<div class="container admin-container">
    <div class="admin-layout">
        <div class="admin-sidebar">
            <h3>Menu</h3>
            <ul>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li class="active"><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/users">Users</a></li>
            </ul>
        </div>

        <div class="admin-main-content">
            <h1>Order Management</h1>

            <div class="card">
                <h3>All Orders</h3>
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Update Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td>#<%= order.id %></td>
                                    <td><%= order.customer_name %></td>
                                    <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                                    <td>$<%= parseFloat(order.total_amount).toFixed(2) %></td>
                                    <td><span class="status-badge status-<%= order.status %>"><%= order.status %></span></td>
                                    <td class="table-actions">
                                        <form action="/admin/orders/status/<%= order.id %>" method="POST">
                                            <select name="status">
                                                <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                <option value="paid" <%= order.status === 'paid' ? 'selected' : '' %>>Paid</option>
                                                <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                                <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                            </select>
                                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .status-badge {
        padding: 0.3em 0.8em;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: capitalize;
    }
    .status-pending { background-color: #f0ad4e; color: #fff; }
    .status-paid { background-color: #5cb85c; color: #fff; }
    .status-shipped { background-color: #337ab7; color: #fff; }
    .status-delivered { background-color: #5bc0de; color: #fff; }
    .status-cancelled { background-color: #d9534f; color: #fff; }

    .data-table select {
        padding: 5px;
        border-radius: 4px;
    }
</style>

<%- include('../partials/footer') %>
