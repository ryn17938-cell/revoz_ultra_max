<%- include('../partials/header') %>

<div class="container product-detail-container">
    <% if (product) { %>
        <div class="product-detail-layout">
            <div class="product-detail-image">
                <img src="<%= product.image_url || '/img/placeholder.jpg' %>" alt="<%= product.name %>">
            </div>
            <div class="product-detail-info">
                <span class="product-category"><%= product.category_name %></span>
                <h1 class="product-title"><%= product.name %></h1>
                <p class="product-price">$<%= product.price %></p>
                <div class="product-description">
                    <p><%= product.description %></p>
                </div>
                <div class="product-stock">
                    <% if (product.stock > 0) { %>
                        <p>In Stock: <span class="stock-level"><%= product.stock %></span></p>
                    <% } else { %>
                        <p class="out-of-stock">Out of Stock</p>
                    <% } %>
                </div>
                <div class="product-actions">
                    <button class="btn btn-primary" data-product-id="<%= product.id %>" <%= product.stock > 0 ? '' : 'disabled' %>>
                        Add to Cart
                    </button>
                    <button class="btn btn-secondary" data-product-id="<%= product.id %>">
                        Add to Wishlist
                    </button>
                </div>
            </div>
        </div>
    <% } else { %>
        <p>Product not found.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
