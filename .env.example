# Environment Variables for RevorZ E-Commerce (EXAMPLE - RENAME TO .env AND FILL IN YOUR VALUES)

# Server Configuration
PORT=3000

# Database Configuration - LOCAL DEVELOPMENT
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=revoz_ultra_max

# Database Configuration - REPLIT (Built-in MySQL)
# Replit auto-provides these, just use them as-is
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=replit_db_password
# DB_NAME=revoz_ultra_max

# Session Secret Key (Change this to a secure random string)
SESSION_SECRET=change_this_to_a_secure_random_string_min_32_chars_like_sha256hash

# Environment (development or production)
NODE_ENV=development
# NODE_ENV=production   # Uncomment when deploying to production


